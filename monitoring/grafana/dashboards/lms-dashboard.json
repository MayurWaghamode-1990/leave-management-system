{
  "dashboard": {
    "id": null,
    "title": "Leave Management System Dashboard",
    "tags": ["lms", "monitoring"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "System Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "lms_requests_total",
            "legendFormat": "Total Requests"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                { "color": "green", "value": null },
                { "color": "red", "value": 1000 }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
      },
      {
        "id": 2,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "lms_memory_usage_bytes / 1024 / 1024",
            "legendFormat": "Memory Usage (MB)"
          }
        ],
        "yAxes": [
          {
            "label": "Memory (MB)",
            "min": 0
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
      },
      {
        "id": 3,
        "title": "CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "lms_cpu_usage_percent",
            "legendFormat": "CPU Usage %"
          }
        ],
        "yAxes": [
          {
            "label": "CPU %",
            "min": 0,
            "max": 100
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 }
      },
      {
        "id": 4,
        "title": "Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(lms_requests_total[5m])",
            "legendFormat": "Requests/sec"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 }
      },
      {
        "id": 5,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(lms_request_errors_total[5m])",
            "legendFormat": "Errors/sec"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 }
      },
      {
        "id": 6,
        "title": "Response Time",
        "type": "graph",
        "targets": [
          {
            "expr": "lms_request_duration_ms",
            "legendFormat": "Avg Response Time (ms)"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 }
      },
      {
        "id": 7,
        "title": "Active Users",
        "type": "stat",
        "targets": [
          {
            "expr": "lms_active_users",
            "legendFormat": "Active Users"
          }
        ],
        "gridPos": { "h": 4, "w": 6, "x": 0, "y": 24 }
      },
      {
        "id": 8,
        "title": "Database Queries",
        "type": "stat",
        "targets": [
          {
            "expr": "lms_database_queries_total",
            "legendFormat": "Total DB Queries"
          }
        ],
        "gridPos": { "h": 4, "w": 6, "x": 6, "y": 24 }
      },
      {
        "id": 9,
        "title": "Emails Sent",
        "type": "stat",
        "targets": [
          {
            "expr": "lms_email_sent_total",
            "legendFormat": "Emails Sent"
          }
        ],
        "gridPos": { "h": 4, "w": 6, "x": 12, "y": 24 }
      },
      {
        "id": 10,
        "title": "System Health",
        "type": "stat",
        "targets": [
          {
            "expr": "up",
            "legendFormat": "Service Status"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              { "options": { "0": { "text": "DOWN" } } },
              { "options": { "1": { "text": "UP" } } }
            ],
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "green", "value": 1 }
              ]
            }
          }
        },
        "gridPos": { "h": 4, "w": 6, "x": 18, "y": 24 }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}