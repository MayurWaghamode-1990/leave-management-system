# =============================================================================
# LEAVE MANAGEMENT SYSTEM - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update the values for your environment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=production
FRONTEND_URL=http://localhost:5173
COMPANY_NAME=Your Company Name
SUPPORT_EMAIL=support@yourcompany.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MySQL Database Connection
DATABASE_URL=mysql://lms_user:password123@localhost:3306/leave_management_db

# Database Credentials (for Docker)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=leave_management_db
DB_USER=lms_user
DB_PASSWORD=password123
DB_ROOT_PASSWORD=rootpassword123

# =============================================================================
# REDIS CONFIGURATION (Optional - for caching and sessions)
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PORT=6379

# =============================================================================
# JWT & SECURITY
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-characters
JWT_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Email Provider (GMAIL, OUTLOOK, OFFICE365, SENDGRID, MAILGUN, SES, CUSTOM)
EMAIL_PROVIDER=GMAIL

# SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email Settings
EMAIL_FROM_NAME=LMS - Leave Management System
EMAIL_FROM_ADDRESS=your-email@gmail.com

# Advanced Email Settings (Optional)
SMTP_MAX_CONNECTIONS=5
SMTP_MAX_MESSAGES=100
SMTP_RATE_LIMIT=10
SMTP_RATE_DELTA=1000
EMAIL_MAX_RETRIES=3
EMAIL_RETRY_DELAY=5000

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# =============================================================================
# CORS & API CONFIGURATION
# =============================================================================
CORS_ORIGIN=http://localhost:5173
API_PREFIX=/api/v1

# =============================================================================
# DOCKER DEPLOYMENT PORTS
# =============================================================================
BACKEND_PORT=3001
FRONTEND_PORT=80
NGINX_HTTP_PORT=8080
NGINX_HTTPS_PORT=8443

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# =============================================================================
# FRONTEND BUILD VARIABLES
# =============================================================================
VITE_API_URL=http://localhost:3001/api/v1
VITE_APP_NAME=Leave Management System

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================
# Webhook URL for external integrations
WEBHOOK_URL=
WEBHOOK_SECRET=

# External HR System Integration
HR_SYSTEM_API_URL=
HR_SYSTEM_API_KEY=

# Slack Integration (Optional)
SLACK_WEBHOOK_URL=
SLACK_BOT_TOKEN=

# Microsoft Teams Integration (Optional)
TEAMS_WEBHOOK_URL=

# =============================================================================
# SSL/TLS CONFIGURATION (for production)
# =============================================================================
SSL_CERT_PATH=
SSL_KEY_PATH=

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-west-2